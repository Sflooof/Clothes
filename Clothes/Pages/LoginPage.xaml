<Page x:Class="Clothes.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clothes.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#F9ECCC">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Авторизация" Width="90" FontWeight="Bold"></TextBlock>
            <TextBlock Text="Логин"></TextBlock>
            <TextBox x:Name="TB_login"></TextBox>
            <TextBlock Text="Пароль"></TextBlock>
            <PasswordBox x:Name="TB_password"></PasswordBox>
            <Button x:Name="BT_login" Content="Войти" Click="BT_login_Click"></Button>
            <Button x:Name="BT_goust" Content="Войти как гость" Click="BT_goust_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
